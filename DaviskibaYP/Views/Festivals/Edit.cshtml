@using Domain.ViewModels.Festivals
@model FestivalEditViewModel

@{
    ViewData["Title"] = "Редактировать фестиваль";
}

<section class="section-card">
    <div class="section-inner">
        <div class="h-tag">Фестивали</div>
        <h2>Редактирование фестиваля</h2>
        <p>Измените данные и сохраните изменения.</p>
    </div>
</section>

<section class="section-card">
    <form asp-action="Edit" asp-controller="Festivals" method="post" class="form-vertical">
        @Html.AntiForgeryToken()
        <input asp-for="Id" type="hidden" />

        <div class="form-row">
            <label asp-for="Title"></label>
            <input asp-for="Title" />
            <span class="field-error" asp-validation-for="Title"></span>
        </div>

        <div class="form-row">
            <label asp-for="Description"></label>
            <textarea asp-for="Description" rows="3"></textarea>
            <span class="field-error" asp-validation-for="Description"></span>
        </div>

        <div class="form-row two-cols">
            <div>
                <label asp-for="StartDate"></label>
                <input asp-for="StartDate" type="date" />
                <span class="field-error" asp-validation-for="StartDate"></span>
            </div>
            <div>
                <label asp-for="EndDate"></label>
                <input asp-for="EndDate" type="date" />
                <span class="field-error" asp-validation-for="EndDate"></span>
            </div>
        </div>

        <div class="form-row two-cols">
            <div>
                <label asp-for="City"></label>
                <input asp-for="City" />
                <span class="field-error" asp-validation-for="City"></span>
            </div>
            <div>
                <label asp-for="Country"></label>
                <input asp-for="Country" />
                <span class="field-error" asp-validation-for="Country"></span>
            </div>
        </div>

        <div class="form-row">
            <label asp-for="CoverUrl"></label>
            <input asp-for="CoverUrl" />
            <span class="field-error" asp-validation-for="CoverUrl"></span>
        </div>

        <button type="submit" class="btn btn-primary btn-shadow">
            Сохранить изменения
        </button>
        <a asp-action="Index" asp-controller="Festivals" class="btn btn-outline">
            Отмена
        </a>

        <div class="section-inner">
            <h3>Галерея фестиваля</h3>
            <p class="muted">Здесь можно добавить несколько фотографий для карточки и страницы фестиваля.</p>

            <a asp-controller="FestivalImages"
               asp-action="Index"
               asp-route-festivalId="@Model.Id"
               class="btn btn-outline btn-sm">
                Управлять галереей
            </a>
        </div>
    </form>
</section>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
